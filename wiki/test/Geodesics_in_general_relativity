            <mi>λ<!-- λ --></mi>
          </mrow>
        </msup>
        <msub>
          <mrow class="MJX-TeXAtom-ORD">

          </mrow>
          <mrow class="MJX-TeXAtom-ORD">
            <mi>ν<!-- ν --></mi>
            <mi>α<!-- α --></mi>
          </mrow>
        </msub>
        <mo>=</mo>
        <mrow>
          <mo>[</mo>
          <mrow>
            <mrow class="MJX-TeXAtom-ORD">
              <mfrac>
                <mrow>
                  <msup>
                    <mi mathvariant="normal">∂<!-- ∂ --></mi>
                    <mrow class="MJX-TeXAtom-ORD">
                      <mn>2</mn>
                    </mrow>
                  </msup>
                  <msup>
                    <mi>X</mi>
